[branch]
	sort = -committerdate
[color]
	ui = auto
	interactive = auto
[column]
	ui = auto
[commit]
	gpgsign = true
	verbose = true
[core]
	editor = emacsclient
	excludesfile = ~/.gitignore
	fsmonitor = true
	legacyheaders = false
	pager = less -XRF
	untrackedCache = true
[diff]
	algorithm = histogram
	colorMoved = plain
	guitool = meld
	mnemonicPrefix = true
	renames = true
	tool = meld
[difftool]
	prompt = false
[fetch]
	all = true
	prune = true
	pruneTags = true
	writeCommitGraph = true
[gpg]
	format = ssh
[help]
	autocorrect = prompt
[init]
	defaultBranch = main
[merge]
	ff = only
[push]
	autoSetupRemote = true
	default = upstream
	followTags = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	autoupdate = true
	enabled = true
[tag]
	sort = version:refname
[user]
	signingKey = ~/.ssh/id_rsa.pub
[alias]
	a = add
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
	bl = blame -w -C -C -C
	ca = commit --amend
	cane = commit --amend --no-edit
	cm = commit
	co = checkout
	cp = cherry-pick
	curbr = rev-parse --abbrev-ref HEAD
	d = diff
	dt = difftool -d
	f = fetch
	i = !git init && git commit --allow-empty -m ':tada: Initial commit'
	l = log --pretty=format:'%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%an]' --abbrev-commit --date=short
	lg = log --pretty=format:'%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%an]' --graph --date=short
	ll = log --pretty=format:'%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%an]' --decorate --numstat --date=short
	pf = push --force-with-lease
	pr = pull --rebase
	root = rev-parse --show-toplevel
	sa = stash --all
	sb = rev-parse --abbrev-ref HEAD
	st = status
	su = submodule update --init
	wip = commit -am "WIP"
